<div class="board-show">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @board.title %></h1>
    <div>
      <%= link_to 'Edit Board', edit_board_path(@board), class: 'btn btn-outline-primary' %>
      <%= link_to 'Back to Boards', boards_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>

  <div class="row">
    <% @board.steps.each do |step| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><%= step.title %></h5>
            <%= link_to 'Edit', edit_board_path(@board), class: 'btn btn-sm btn-outline-secondary' %>
          </div>
          <div class="card-body">
            <% step.tasks.each do |task| %>
              <div class="task mb-3 p-2 border-bottom">
                <h6><%= task.title %></h6>
                <p class="text-muted small"><%= truncate(task.description, length: 50) %></p>
                <div>
                  <%= link_to 'Edit', edit_board_step_task_path(@board, step, task), class: 'btn btn-sm btn-outline-secondary' %>
                  <%= link_to 'Delete', board_path(@board), data: { confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-sm btn-outline-danger' %>
                  <%= link_to 'Back to Boards', boards_path, class: 'btn btn-sm btn-outline-secondary' %>
                </div>
              </div>
            <% end %>
            <%= link_to 'Add Task', new_board_step_task_path(@board, step), class: 'btn btn-sm btn-outline-success' %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 mb-4">
      <%= link_to new_board_step_path(@board), class: 'card h-15 text-center d-flex align-items-center justify-content-center text-decoration-none' do %>
        <div class="card-body">
          <i class="fas fa-plus fa-3x mb-3 text-muted"></i>
          <h5 class="text-muted">Add New Step</h5>
        </div>
      <% end %>
    </div>
  </div>
</div>